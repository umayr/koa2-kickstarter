{
  "name": "koa2-kickstarter",
  "version": "1.0.0",
  "description": "An opinionated boilerplate for koa v2 with batteries included",
  "main": "src/index.js",
  "scripts": {
    "pretest": "npm run lint || true",
    "test": "ava -v",
    "start": "node bin/server",
    "watch": "nodemon bin/server",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix"
  },
  "author": "Umayr Shahid <umayrr@hotmail.co.uk>",
  "license": "MIT",
  "dependencies": {
    "babel-core": "^6.8.0",
    "babel-preset-es2015-node5": "^1.2.0",
    "babel-preset-stage-3": "^6.5.0",
    "boom": "^3.1.3",
    "convict": "^1.3.0",
    "debug": "^2.2.0",
    "koa": "^2.0.0",
    "koa-bunyan-logger": "^2.0.0-pre1",
    "koa-compose": "^3.1.0",
    "koa-json": "^2.0.2",
    "koa-router": "^7.0.1"
  },
  "devDependencies": {
    "ava": "^0.14.0",
    "babel-eslint": "^6.0.4",
    "eslint": "^2.10.2",
    "eslint-config-airbnb-base": "^3.0.1",
    "eslint-plugin-import": "^1.8.0",
    "eslint-plugin-tdd": "^0.5.0",
    "nodemon": "^1.9.2"
  },
  "ava": {
    "babel": "inherit",
    "require": [
      "babel-register"
    ]
  }
}
